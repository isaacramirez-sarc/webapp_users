{% extends 'base.html.twig' %}

{% block title %}Log In!{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-light">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/4/4a/Google_2015_logo.svg" class="w-25" alt="logo" />
                        <h2 class="mt-3 mb-4">Sign in to unlock the <br /> Dashboard.</h2>
                    </div>
                    <div class="d-grid gap-3">
                        <a href="{{ path('auth_oauth_connect', { service: 'google' }) }}" class="btn btn-outline-primary d-flex align-items-center justify-content-center">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" class="me-2" alt="google logo" style="width: 20px;" />
                            Continue with Google
                        </a>
                    </div>
                    <div class="text-center mt-4 text-muted">
                        <p class="mb-2">
                            By proceeding, you agree to our <a href="#" class="text-decoration-underline">Terms of Use</a> and
                            confirm you have read our
                            <a href="#" class="text-decoration-underline">Privacy and Cookie Statement</a>.
                        </p>
                        <p class="mb-0">
                            This site is protected by reCAPTCHA and the
                            <a href="#" class="text-decoration-underline">Google Privacy Policy</a> and
                            <a href="#" class="text-decoration-underline">Terms of Service</a> apply.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
